# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_EMBED_MODEL=nomic-embed-text
OLLAMA_TIMEOUT_SECONDS=30
CHAT_TIMEOUT_SECONDS=15
DB_TOOL_TIMEOUT_SECONDS=4

# PostgreSQL
PG_HOST=localhost
PG_PORT=5433
PG_DATABASE=learning_assistant
PG_USER=postgres
PG_PASSWORD=postgres
PG_POOL_MIN=1
PG_POOL_MAX=5

# DB backend
DB_BACKEND=mcp

# MCP (pg-mcp-server)
MCP_SERVER_COMMAND=npx
MCP_SERVER_ARGS=--yes pg-mcp-server@PIN_VERSION --transport stdio
MCP_DATABASE_URL=postgresql://postgres:postgres@localhost:5433/learning_assistant
MCP_ALLOW_WRITE_OPS=false
MCP_TOOL_NAME=query
MCP_QUERY_KEY=sql
MCP_PARAMS_KEY=params
MCP_SUPPORTS_PARAMS=false
MCP_FALLBACK_TO_PSYCOPG2=true

# ChromaDB
CHROMA_PERSIST_DIR=./chroma_data
CHROMA_COLLECTION=knowledge_base

# Tavily
TAVILY_API_KEY=tvly-your-key-here

# Knowledge Base
KB_DIR=./kb
